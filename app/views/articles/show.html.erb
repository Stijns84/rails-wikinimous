<div class="container">
  <div class="row">
    <div id="article" class="col-xs-10 col-xs-offset-1">
      <h2><%= @article.title %></h2>
      <br>
      <p><%= sanitize( Kramdown::Document.new(@article.content).to_html) %></p>
      <br>
      <p><%= link_to "Edit this article", edit_article_path(@article) %></p>

      <p><%= link_to "Delete this article", article_path(@article),
        method: :delete,
        data: { confirm: "Are you sure?" } %></p>

      <p><%= link_to "Go back to your article list", articles_path %></p>
    </div>
  </div>
</div>
